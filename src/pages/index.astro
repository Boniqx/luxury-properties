---
import LeadCaptureForm from "../components/LeadCaptureForm.jsx";
import "../styles/global.css";
import { Image, getImage } from "astro:assets";
import heroBg from "../assets/hero-bg.png";
import textureBg from "../assets/texture-bg.png";
import "@fontsource/inter/300.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/playfair-display/400.css";
import "@fontsource/playfair-display/400-italic.css";
import "@fontsource/playfair-display/600.css";
import "@fontsource/playfair-display/700.css";

const optimizedTexture = await getImage({
  src: textureBg,
  format: "webp",
  width: 412,
  height: 412,
});
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Unlock exclusive off-market luxury real estate listings. Gain priority access to premium properties before they hit the public market."
    />
    <title>Luxury Off-Market Real Estate</title>
  </head>
  <body class="font-sans antialiased bg-[#0F172A]">
    <main class="min-h-screen flex flex-col lg:flex-row">
      <!-- Left Side: Visual & Value Prop -->
      <div
        class="w-full lg:w-1/2 relative flex items-center justify-center p-8 lg:p-12 overflow-hidden min-h-[50vh] lg:min-h-screen"
      >
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 z-0">
          <Image
            src={heroBg}
            alt="Luxury Modern Home"
            class="w-full h-full object-cover"
            fetchpriority="high"
            width={412}
            height={412}
            loading="eager"
          />
          <div class="absolute inset-0 bg-[#0F172A]/80 mixed-blend-multiply">
          </div>
        </div>

        <!-- Content -->
        <div class="relative z-10 text-white max-w-lg">
          <div class="flex items-center space-x-2 mb-6">
            <div class="h-px w-8 bg-[#C5A059]"></div>
            <span
              class="text-[#C5A059] uppercase tracking-widest text-xs font-semibold"
              >Verified Investors Only</span
            >
          </div>

          <h1 class="text-4xl lg:text-6xl font-serif mb-6 leading-tight">
            Unlock Exclusive <br />
            <span>Off-Market Listings</span>
          </h1>

          <p
            class="text-gray-300 text-lg lg:text-xl font-light leading-relaxed mb-8"
          >
            Gain priority access to luxury properties before they hit the public
            market. Curated for discerning buyers seeking privacy and
            distinction.
          </p>

          <div
            class="flex items-center space-x-8 text-sm text-gray-400 font-light"
          >
            <div class="flex items-center">
              <span class="w-1.5 h-1.5 rounded-full bg-[#C5A059] mr-2"></span>
              Pre-Market Access
            </div>
            <div class="flex items-center">
              <span class="w-1.5 h-1.5 rounded-full bg-[#C5A059] mr-2"></span>
              Direct to Seller
            </div>
          </div>
        </div>
      </div>

      <!-- Right Side: Lead Capture Form -->
      <div
        class="w-full lg:w-1/2 bg-[#FDFCF8] flex items-center justify-center p-8 lg:p-12 relative"
        style={`background-image: url('${optimizedTexture.src}'); background-size: cover;`}
      >
        <div class="w-full max-w-md">
          <LeadCaptureForm />
        </div>

        <div class="absolute bottom-6 right-6 text-gray-300 text-xs">
          &copy; 2024 Luxury Real Estate
        </div>
      </div>
    </main>
  </body>
</html>
