---
import LeadCaptureForm from "../components/LeadCaptureForm.jsx";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Luxury Off-Market Real Estate</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-sans antialiased bg-[#0F172A]">
    <div class="min-h-screen flex flex-col lg:flex-row">
      <!-- Left Side: Visual & Value Prop -->
      <div
        class="w-full lg:w-1/2 relative flex items-center justify-center p-8 lg:p-12 overflow-hidden min-h-[50vh] lg:min-h-screen"
      >
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 z-0">
          <img
            src="/assets/hero-bg.png"
            alt="Luxury Modern Home"
            class="w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-[#0F172A]/80 mixed-blend-multiply">
          </div>
        </div>

        <!-- Content -->
        <div class="relative z-10 text-white max-w-lg">
          <div class="flex items-center space-x-2 mb-6">
            <div class="h-px w-8 bg-[#C5A059]"></div>
            <span
              class="text-[#C5A059] uppercase tracking-widest text-xs font-semibold"
              >Verified Investors Only</span
            >
          </div>

          <h1 class="text-4xl lg:text-6xl font-serif mb-6 leading-tight">
            Unlock Exclusive <br />
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-400"
              >Off-Market Listings</span
            >
          </h1>

          <p
            class="text-gray-300 text-lg lg:text-xl font-light leading-relaxed mb-8"
          >
            Gain priority access to luxury properties before they hit the public
            market. Curated for discerning buyers seeking privacy and
            distinction.
          </p>

          <div
            class="flex items-center space-x-8 text-sm text-gray-400 font-light"
          >
            <div class="flex items-center">
              <span class="w-1.5 h-1.5 rounded-full bg-[#C5A059] mr-2"></span>
              Pre-Market Access
            </div>
            <div class="flex items-center">
              <span class="w-1.5 h-1.5 rounded-full bg-[#C5A059] mr-2"></span>
              Direct to Seller
            </div>
          </div>
        </div>
      </div>

      <!-- Right Side: Lead Capture Form -->
      <div
        class="w-full lg:w-1/2 bg-[#FDFCF8] flex items-center justify-center p-8 lg:p-12 relative"
        style="background-image: url('/assets/texture-bg.png'); background-size: cover;"
      >
        <div class="w-full max-w-md">
          <!-- React Component Island -->
          <LeadCaptureForm client:visible />
        </div>

        <div class="absolute bottom-6 right-6 text-gray-300 text-xs">
          &copy; 2024 Luxury Real Estate
        </div>
      </div>
    </div>
  </body>
</html>
